@model Category

<div class="container">

<div class="row">
    <h1>Create Category</h1>
</div>

<form method="post" class="border p-3 mt-4">
    <div class="mb-3">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="DisplayOrder"></label>
        <input asp-for="DisplayOrder" class="form-control" />
        <span asp-validation-for="DisplayOrder" class="text-danger"></span>

    </div>

    <div asp-validation-summary="All">

    </div>

    <div class="row mt-4">

        <div class="col-6 col-md-3">
            <button class="form-control btn btn-primary " type="submit">Create</button>
        </div>

        <div class="col-6 col-md-3">
            <a asp-action="index" asp-controller="Category" class="form-control btn btn-outline-secondary border">Back to list</a>

        </div>
    </div>

</form>
</div>

        @section Scripts {
            @{
                <partial name="_ValidationSCriptsPartial" />
            }
        }